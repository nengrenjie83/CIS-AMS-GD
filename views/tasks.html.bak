<body>
    <h1>タスク一覧　看板ビュー</h1>
    <p>Welcome to ekanban</p>

	// using json in server.
	<%-JSON.stringify(tasks) %>
	<table border = "1" align = "center">
		<th>Task ID</th>
		<th>Task Name</th>
		<th>Status</th>
		<th>Detail</th>
	<% for (var i = 0; i<tasks.length;  i++) { %>
		<tr>
			<td><%=tasks[i]._id %></td>
			<td><%=tasks[i].task_name %></td>
			<td><%=tasks[i].task_status %></td>
			<td><%=tasks[i].task_detail %></td>
		</tr>
	<% } %>
	</table>
